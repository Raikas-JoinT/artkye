  <% if user_signed_in? && @user.test_image %>
    <%= image_tag @user.test_image %>
  <% else %>
    <%= image_tag @user.avatar %>
  <% end %>

<%= render partial: "follow", locals: {controller: :users, action: :follow_list,user_id: @user.id} %>

<% if current_user.id == @user.id %>
  <%= link_to @user.follow_count, {controller: :users, action: :follow_list,user_id: @user.id}, method: :get, class: 'user-follow-count' %>
  <span class="follow-count-text">人のフォロー</span>
  <%= link_to @user.followers_count, {controller: :users, action: :follower_list,user_id: @user.id}, method: :get, class: 'user-follow-count' %>
  <span class="follow-count-text">人のフォロワー</span>
<% end %>

<% unless @user.id == current_user.id %>
  <% if (current_user.followed_by? @user) && (@user.followed_by? current_user)  %>
    <% if @is_room == true %>
      <p class="user-show-room"><a href="/rooms/<%= @room_id %>" class="btn btn-primary btn-lg">チャットへ</a>
    <% else %>
      <%= form_for @room do |f| %>
        <%= fields_for @entry do |e| %>
          <%= e.hidden_field :user_id, value: @user.id %>
        <% end %>
        <%= f.submit "チャットを始める", class:"btn btn-primary btn-lg user-show-chat" %>
      <% end %>
    <% end %>
  <% end %>
<% end %>